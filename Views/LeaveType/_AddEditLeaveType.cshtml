@model leavemanagementsystem.Data.Entities.LeaveType

@using (Html.BeginForm("AddEditLeaveType", "LeaveType", FormMethod.Post, new { id = "AddEditLeaveTypeForm", onsubmit = "SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(modal => modal.Name, new { @class = "control-label" })
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(modal => modal.Description, new { @class = "control-label" })
        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(modal => modal.DefaultDays, new { @class = "control-label" })
        @Html.EditorFor(model => model.DefaultDays, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Clear" class="btn btn-light" />
    </div>
}