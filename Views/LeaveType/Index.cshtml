@model IEnumerable<leavemanagementsystem.Models.DetailsLeaveTypeViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Leave Type</h1>
<hr />

<div class="row">
    <div class="col-lg-12 mb-3">
        <a class="btn btn-success pull-right text-white" onclick="PopupForm('@Url.Action("AddEditLeaveType", "LeaveType")')">
            <i class="fa fa-plus"></i> Add New
        </a>
    </div>
</div>

<table id="leaveTypeTable" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>DateCreated</th>
        </tr>
    </thead>
</table>

<link href="https://cdn.datatables.net/1.10.22/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/buttons/1.6.5/css/buttons.bootstrap4.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/select/1.3.1/css/select.bootstrap4.min.css" rel="stylesheet" />

