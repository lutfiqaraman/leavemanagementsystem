@model IEnumerable<DetailsLeaveTypeViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Leave Type</h1>
<hr />

<div class="row">
    <div class="col-lg-12 mb-3">
        <a class="btn btn-success pull-right popup text-white" data-url="LeaveType/AddEditLeaveType" data-toggle="modal" data-target="#modal-add-edit">
            <i class="fa fa-plus"></i> Add New
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <table id="leavetypetable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Date Created</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<partial name="../Shared/_Modal.cshtml" for="@Model">

<link href="https://cdn.datatables.net/1.10.22/css/dataTables.bootstrap4.min.css" rel="stylesheet"/>

@section scripts{
    <script src="//cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.22/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/leavetype.js" asp-append-version="true"></script>
}